<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/modify_profile_username_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/username_label_registration"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/modify_profile_position_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/position_label_registration"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <EditText
                android:id="@+id/modify_profile_username_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="new username"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp" />
            <EditText
                android:id="@+id/modify_profile_position_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="new position"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/modify_profile_confirm_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:layout_marginStart="150dp"
        android:layout_marginTop="50dp"/>
    <Button
        android:id="@+id/modify_profile_cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:layout_marginStart="150dp"
        android:layout_marginTop="50dp"/>
</LinearLayout>