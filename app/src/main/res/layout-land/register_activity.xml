<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="@color/appBackground">

    <TextView
        style="@style/label"
        android:id="@+id/username_label"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:text="@string/username_label_registration"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:textSize="@dimen/text_dim_480dp"
        android:maxLength="12"/>

    <TextView
        style="@style/label"
        android:id="@+id/position_label"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:text="@string/position_label_registration"
        android:layout_alignStart="@+id/username_label"
        android:layout_alignEnd="@+id/username_label"
        android:layout_below="@+id/username_label"
        android:layout_marginTop="16dp"
        android:textSize="@dimen/text_dim_480dp"/>

    <TextView
        style="@style/label"
        android:id="@+id/password_label"
        android:layout_width="190dp"
        android:layout_height="41dp"
        android:text="@string/password_label_registration"
        android:layout_alignStart="@+id/username_label"
        android:layout_alignEnd="@+id/username_label"
        android:layout_below="@+id/position_label"
        android:layout_marginTop="16dp"
        android:textSize="@dimen/text_dim_480dp"/>


    <TextView
        style="@style/label"
        android:id="@+id/email_label"
        android:layout_width="190dp"
        android:layout_height="41dp"
        android:text="@string/email_label_registration"
        android:layout_alignStart="@+id/username_label"
        android:layout_alignEnd="@+id/username_label"
        android:layout_below="@+id/password_label"
        android:layout_marginTop="16dp"
        android:textSize="@dimen/text_dim_480dp"/>

    <EditText
        style="@style/label"
        android:id="@+id/username_text"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_toEndOf="@+id/username_label"
        android:layout_alignBottom="@id/username_label"
        android:layout_marginStart="32dp"
        android:textSize="@dimen/text_dim_480dp"/>

    <EditText
        style="@style/label"
        android:id="@+id/position_text"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_toEndOf="@+id/position_label"
        android:layout_alignBottom="@id/position_label"
        android:layout_alignStart="@+id/username_text"
        android:layout_alignEnd="@+id/username_text"
        android:textSize="@dimen/text_dim_480dp"
        />


    <EditText
        style="@style/label"
        android:id="@+id/password_text"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_toEndOf="@+id/password_label"
        android:layout_alignBottom="@id/password_label"
        android:layout_alignStart="@+id/username_text"
        android:layout_alignEnd="@+id/username_text"
        android:textSize="@dimen/text_dim_480dp"
        />

    <EditText
        style="@style/label"
        android:id="@+id/email_text"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:layout_toEndOf="@+id/email_label"
        android:layout_alignBottom="@id/email_label"
        android:layout_alignStart="@+id/username_text"
        android:layout_alignEnd="@+id/username_text"
        android:textSize="@dimen/text_dim_480dp" />

    <Button
        style="@style/btns"
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/registration_button"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="32dp"
        android:textSize="@dimen/text_dim_480dp"/>

</RelativeLayout>