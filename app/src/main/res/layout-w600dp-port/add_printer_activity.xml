<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/appBackground">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/margin_top_320dp"
            style="@style/label"
            android:id="@+id/add_printer_type_label"
            android:text="@string/model_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_dim_600dp"/>

        <Spinner
            android:layout_below="@+id/add_printer_type_label"
            android:layout_marginTop="@dimen/margin_between"
            android:id="@+id/add_printer_models_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            style="@style/label"
            android:layout_below="@+id/add_printer_models_spinner"
            android:layout_marginTop="@dimen/margin_new_section"
            android:id="@+id/add_printer_materials_label"
            android:text="@string/materials_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_dim_600dp"/>

        <include
            android:id="@+id/placeholder"
            layout="@layout/rv"
            android:layout_below="@+id/add_printer_materials_label"
            android:layout_marginTop="@dimen/margin_between"
            android:layout_height="350dp"
            android:layout_width="match_parent"/>
        <TextView
            style="@style/label"
            android:layout_below="@+id/placeholder"
            android:id="@+id/add_printer_printer_tag_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/printer_id_label"
            android:textSize="@dimen/text_dim_600dp"/>

        <EditText
            style="@style/label"
            android:layout_below="@+id/add_printer_printer_tag_label"
            android:layout_marginTop="@dimen/margin_between"
            android:layout_centerHorizontal="true"
            android:id="@+id/add_printer_printer_tag_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="@string/hint_printer_id"
            android:textSize="@dimen/text_dim_600dp"
            android:maxLength="10" />
        <TextView
            style="@style/label"
            android:layout_below="@+id/add_printer_printer_tag_input"
            android:layout_marginTop="@dimen/margin_new_section"
            android:id="@+id/add_printer_dimension_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dimensioni"
            android:textSize="@dimen/text_dim_600dp" />
        <include
            layout="@layout/dimensions_layout"
            android:id="@+id/add_printer_dims_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/add_printer_dimension_label"
            android:layout_centerHorizontal="true"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttons"
            android:layout_below="@+id/add_printer_dims_input"
            android:layout_marginTop="@dimen/margin_top_320dp"
            android:layout_centerHorizontal="true"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:layout_marginBottom="64dp"
            >
            <Button
                style="@style/btns"
                android:id="@+id/add_printer_confirm_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/confirm"
                android:layout_marginEnd="16dp"
                android:textSize="@dimen/text_dim_600dp"/>
            <Button
                style="@style/btns"
                android:id="@+id/add_printer_close_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:layout_alignBottom="@+id/add_printer_confirm_button"
                android:layout_toEndOf="@+id/add_printer_confirm_button"
                android:layout_marginStart="16dp"
                android:textSize="@dimen/text_dim_600dp"/>
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>
