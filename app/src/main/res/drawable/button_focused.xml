<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:top="0dp"
        android:right="0dp"
        android:left="0dp"
        android:bottom="0dp">
        <shape android:shape="oval">
            <gradient
                android:startColor="#111111"
                android:centerColor="#000000"
                android:endColor="#111111"
                android:angle="90"/>
            <padding
                android:left="7dp"
                android:right="7dp"
                android:bottom="7dp"/>
            <stroke
                android:width="2dip"
                android:color="#cccccc"/>
            <corners
                android:radius="8dp"/>
            <size
                android:width="145dp"
                android:height="145dp"/>
        </shape>
    </item>
    <item android:top="7dp"
        android:right="0dp"
        android:left="0dp"
        android:bottom="0dp">
        <shape android:shape="line">
            <stroke
                android:width="15dp"
                android:color="#ef2222"/>
        </shape>
    </item>
    <item android:top="7dp"
        android:right="0dp"
        android:left="0dp"
        android:bottom="0dp">
        <rotate
            android:fromDegrees="90"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="-90">
            <shape android:shape="line">
                <stroke
                    android:width="15dp"
                    android:color="#ef2222"/>
            </shape>
        </rotate>
    </item>

</layer-list>