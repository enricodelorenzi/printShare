<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dimensions_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/border"
    >


    <TextView
        style="@style/label"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="H"
        android:id="@+id/height_label"
        android:layout_marginTop="8dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:textSize="@dimen/text_dim_320dp"/>

    <TextView
        style="@style/label"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="L"
        android:id="@+id/length_label"
        android:layout_below="@+id/height_label"
        android:layout_marginTop="16dp"
        android:layout_alignStart="@+id/height_label"
        android:textSize="@dimen/text_dim_320dp"/>

    <TextView
        style="@style/label"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="W"
        android:id="@+id/width_label"
        android:layout_below="@+id/length_label"
        android:layout_marginTop="16dp"
        android:layout_alignStart="@+id/height_label"
        android:textSize="@dimen/text_dim_320dp"/>

    <EditText
        style="@style/label"
        android:id="@+id/height_input"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/height_label"
        android:layout_toEndOf="@+id/height_label"
        android:layout_marginStart="8dp"
        android:inputType="number"
        android:textSize="@dimen/text_dim_320dp"/>

    <EditText
        style="@style/label"
        android:id="@+id/length_input"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/length_label"
        android:layout_toEndOf="@+id/length_label"
        android:layout_alignStart="@+id/height_input"
        android:inputType="number"
        android:textSize="@dimen/text_dim_320dp"/>

    <EditText
        style="@style/label"
        android:id="@+id/width_input"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/width_label"
        android:layout_toEndOf="@+id/width_label"
        android:layout_alignStart="@+id/height_input"
        android:inputType="number"
        android:textSize="@dimen/text_dim_320dp"/>
</RelativeLayout>