<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackground">

    <TextView
        style="@style/label"
        android:id="@+id/email_login_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email_label_registration"
        android:layout_alignParentStart="true"
        android:layout_marginTop="250dp"
        android:layout_marginStart="16dp"
        android:textSize="@dimen/text_dim_720dp"
        />

    <TextView
        style="@style/label"
        android:id="@+id/password_login_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/password_label_registration"
        android:layout_below="@+id/email_login"
        android:layout_alignStart="@+id/email_login_label"
        android:layout_marginTop="16dp"
        android:textSize="@dimen/text_dim_720dp"/>

    <EditText
        style="@style/label"
        android:id="@+id/email_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textWebEmailAddress"
        android:layout_below="@+id/email_login_label"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/email_login_label"
        android:layout_marginEnd="400dp"
        android:textSize="@dimen/text_dim_720dp"/>

    <EditText
        style="@style/label"
        android:id="@+id/password_login_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_below="@+id/password_login_label"
        android:layout_alignStart="@+id/email_login"
        android:layout_alignEnd="@+id/email_login"
        android:textSize="@dimen/text_dim_720dp"/>

    <Button
        style="@style/btns"
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/password_login_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:text="@string/login"
        android:textSize="@dimen/text_dim_720dp"/>
</RelativeLayout>